{
  "name": "Hospital Management System",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "postCreateCommand": "pip install -r requirements.txt && python manage.py migrate && python manage.py setup_users",
  "forwardPorts": [8000],
  "portsAttributes": {
    "8000": {
      "label": "Django Server",
      "onAutoForward": "openBrowser"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.pylint"
      ]
    }
  }
}